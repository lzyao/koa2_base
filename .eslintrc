{
  "parser": "babel-eslint",
  "extends": "standard",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true
  },
  "rules": {
    "func-style": [2, "declaration", { "allowArrowFunctions": true }],
    "generator-star-spacing": ["error", {"before": true, "after": false}],
    "space-before-function-paren": ["error", { "anonymous": "always", "named": "never" }],
    "semi": ["error", "always"],
    "eol-last": ["error", "never"]
  }
}